<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Edit Tag</h3></div>
  <div class="panel-body">
    <form method="post" action="<%= url['location'].gsub(':id', location['id'].to_s) %>" class="form-horizontal">
        <div class="form-group">
          <label for="name" class="col-sm-1 control-label">Location name</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" rows="1"
              aria-label="Name" name="name" id="name" value="<%= location['name'] %>" />
          </div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-success btn-block" name="submit">Save</button>
          </div>
        </div>
    </form>
  </div>
</div>


<% if defined?(visible_expenses) %>
<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Expenses Associated with Location</h3></div>
  <div class="panel-body">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Location</th>
          <th>Date</th>
          <th>Tags/Notes</th>
        </tr>
      </thead>
      <tbody>
        <% visible_expenses.each do |expense| %>
          <tr>
            <td>
              <% link_url = url['expense_edit'].gsub(':id', expense['id'].to_s) %>
              <a href="<%= link_url %>">$ <%= expense['amount'] %></a>
            </td>
            <td>
              <% link_url = url['location'].gsub(':id', expense['location']['id'].to_s) %>
              <a href="<%= link_url %>"><%= expense['location']['name'] %></a>
            </td>
            <td><%= expense['date'] %></td>
            <td>
                <% expense['tags'].each_with_index do |tag, idx| %>
                  <% link_url = url['tag'].gsub(':id', tag['id'].to_s) %>
                  <a href="<%= link_url %>"><%= tag['name'] %></a><%= idx == expense['tags'].size - 1 ? '' : ',' %>
                <% end %>
              <p class="text-muted">
                <%= expense['notes'] %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

