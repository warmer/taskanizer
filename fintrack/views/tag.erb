<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Edit Tag</h3></div>
  <div class="panel-body">
    <form method="post" action="<%= url['tag'].gsub(':id', tag['id'].to_s) %>" class="form-horizontal">
        <div class="form-group">
          <label for="name" class="col-sm-1 control-label">Tag name</label>
          <div class="col-sm-7">
            <input type="text" class="form-control" rows="1"
              aria-label="Name" name="name" id="name" value="<%= tag['name'] %>" />
          </div>
          <div class="col-sm-2">
            <button type="submit" class="btn btn-success btn-block" name="submit">Save</button>
          </div>
        </div>
    </form>
  </div>
</div>

<% if defined?(visible_budgets) and visible_budgets and visible_budgets.size > 0 %>
<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Budgets Associated with Tag</h3></div>
  <div class="panel-body">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Tag</th>
          <th>Period<br />Start - End</th>
        </tr>
      </thead>
      <tbody>
        <% visible_budgets.each do |budget| %>
          <% puts "Budget: #{budget}" %>
          <tr>
            <td>
              <% link_url = url['budget_edit'].gsub(':id', budget['id'].to_s) %>
              <a href="<%= link_url %>"><%= budget['name'] %></a>
            </td>
            <td>
              $ <%= budget['amount'] %>
            </td>
            <td>
              <% link_url = url['tag'].gsub(':id', budget['tag']['id'].to_s) %>
              <a href="<%= link_url %>"><%= budget['tag']['name'] %></a>
            </td>
            <td>
              <%= budget['period'] == 365 ? 'Yearly' : 'Monthly' %>
              <p class="text-muted">
                Starts <%= budget['start_date'] %>, Ends <%= budget['end_date'] %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>



<% if defined?(visible_expenses) %>
<div class="panel panel-default">
  <div class="panel-heading"><h3 class="panel-title">Expenses Associated with Tag</h3></div>
  <div class="panel-body">
    <table class="table table-striped table-condensed">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Location</th>
          <th>Date</th>
          <th>Tags/Notes</th>
        </tr>
      </thead>
      <tbody>
        <% visible_expenses.each do |expense| %>
          <tr>
            <td>
              <% link_url = url['expense_edit'].gsub(':id', expense['id'].to_s) %>
              <a href="<%= link_url %>">$ <%= expense['amount'] %></a>
            </td>
            <td>
              <%= expense['location'] %>
            </td>
            <td><%= expense['date'] %></td>
            <td>
                <% expense['tags'].each_with_index do |tag, idx| %>
                  <% link_url = url['tag'].gsub(':id', tag['id'].to_s) %>
                  <a href="<%= link_url %>"><%= tag['name'] %></a><%= idx == expense['tags'].size - 1 ? '' : ',' %>
                <% end %>
              <p class="text-muted">
                <%= expense['notes'] %>
              </p>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% end %>

